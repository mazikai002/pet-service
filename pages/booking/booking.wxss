.container {
  padding: 30rpx;
}

.booking-header {
  margin-bottom: 40rpx;
}

.service-name {
  font-size: 38rpx;
  font-weight: bold;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.picker {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.form-input {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.pet-selection {
  display: flex;
  flex-wrap: wrap;
}

.pet-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  padding: 15rpx;
  border-radius: 10rpx;
  background-color: white;
}

.pet-item.selected {
  background-color: #E3F2FD;
  border: 2rpx solid #2196F3;
}

.pet-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.pet-name {
  font-size: 24rpx;
}

.form-textarea {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  width: auto;
  height: 180rpx;
  font-size: 28rpx;
}

.price-section {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.price {
  font-weight: bold;
  color: #FF5722;
}

.action-button {
  background-color: #4CAF50;
  color: white;
  text-align: center;
  padding: 25rpx 0;
  border-radius: 50rpx;
  font-weight: bold;
} 