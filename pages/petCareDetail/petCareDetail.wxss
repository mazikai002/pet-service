.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 顶部信息区 */
.header-section {
  position: relative;
}

.service-bg {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cat-bg {
  background: linear-gradient(135deg, #FF9800 0%, #FF5722 100%);
}

.dog-bg {
  background: linear-gradient(135deg, #4CAF50 0%, #009688 100%);
}

.pet-emoji {
  font-size: 120rpx;
  color: rgba(255, 255, 255, 0.8);
}

.service-info-card {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.service-header {
  position: relative;
}

.service-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.service-price {
  font-size: 40rpx;
  font-weight: bold;
}

.service-features {
  background-color: #FFF5F5;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.feature-item {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.tabs {
  display: flex;
  border-bottom: 1rpx solid #EEEEEE;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #999;
}

.tab.active {
  color: #333;
  font-weight: bold;
  border-bottom: 4rpx solid #FFCC00;
}

.tab-content {
  min-height: 400rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
}

.description, .step {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 10rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.book-btn {
  background-color: #FFCC00;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.banner {
  width: 100%;
  height: 400rpx;
}

.service-info {
  position: relative;
  margin-top: -60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.price-value {
  font-size: 48rpx;
  color: #FF6B6B;
  font-weight: bold;
  margin: 0 8rpx;
}

.price-unit {
  font-size: 24rpx;
  color: #999999;
}

.share-btn {
  font-size: 28rpx;
  color: #666666;
}

.features {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.bonus-bar {
  display: flex;
  align-items: center;
  background-color: #FFF5F5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.bonus-tag {
  font-size: 24rpx;
  color: #FF6B6B;
  background-color: #FFDDDD;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.bonus-text {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
}

.wallet-btn {
  font-size: 24rpx;
  color: #FF6B6B;
  border: 2rpx solid #FF6B6B;
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
}

.service-flow {
  background-color: #FFFBEA;
  border-radius: 16rpx;
  padding: 30rpx;
}

.flow-step {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.step-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}

.step-text {
  font-size: 28rpx;
  color: #8B6E3C;
}

.diary-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #EEEEEE;
}

.diary-pet-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
}

.diary-info {
  flex: 1;
}

.diary-content-text {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.diary-meta {
  display: flex;
  justify-content: space-between;
  color: #999999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.diary-author {
  display: flex;
  align-items: center;
}

.author-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.author-name {
  font-size: 24rpx;
  color: #666666;
}

.review-item {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #EEEEEE;
}

.review-header {
  display: flex;
  margin-bottom: 20rpx;
}

.reviewer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.rating {
  display: flex;
}

.star {
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}

.review-date {
  font-size: 24rpx;
  color: #999999;
}

.review-content {
  font-size: 28rpx;
  line-height: 1.6;
}

.cs-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.cs-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.cs-text {
  font-size: 24rpx;
  color: #666666;
} 